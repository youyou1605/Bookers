<h1>Books</h1>

<% @books.each do |book| %>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan = "3"></th>
  </tr>
  </thead>
    <tbody>
    <td><span><%= book.title %></span></td>
    <td><span><%= book.body %></span></td>
  <td><span><%= link_to 'Show',book_path(book.id) %></span></td>
  <td><span><%= link_to "Edit",edit_book_path(book.id) %></span></td>
  <td><span><%= link_to "Destroy",destroy_book_path(book.id),method: :delete,"data-confirm" => "Are you sure?" %></span></td>
  </tbody>
</table>

<% end %>


<h2>New book</h2>
<% if @book.errors.any? %>
<%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book, url: '/books', method: :post do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Body</p>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>

