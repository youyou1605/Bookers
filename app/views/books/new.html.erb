<h1>Books</h1>
<h2>投稿一覧</h2>

<%= @books.each do |book| %>

  <p>タイトル</p>
  <span><%= link_to book.title,book_path(book.id) %></span>

<% end %>



<%= form_with model: @book, url: '/books', method: :post do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>

